<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginAppTwo.Views.PaginaPrincipal"
             xmlns:local="clr-namespace:LoginAppTwo.ViewModel">


    <ContentPage.BindingContext>
        <local:PaginaPrincipalViewModel/>
    </ContentPage.BindingContext>
    
    <ContentPage.Content>

        <Frame BackgroundColor="Teal">
            <StackLayout>
                <Label Text="{Binding CurremtUser.UserName}" TextColor="Black" HorizontalOptions="Center" VerticalOptions="Center"/>
                <Button Text="Logoff" Clicked="Logoff_Clicked"/>
                
            </StackLayout>
        </Frame>
    </ContentPage.Content>
</ContentPage>